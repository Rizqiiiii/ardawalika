<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>Register</title>
  </head>
  <body>
    <!-- lOGIN CARD WRAPPER -->

    <div class="wrapperlog">
      <div class="register">
        <!-- REGISTER HEADER -->
        <div class="register__header">
          Hai, <br />
          Silahkan Registrasi
        </div>

        <!-- EMAIL INPUT -->
        <form action="/users/register" method="post">
          <div class="register__name">
            <input type="name" name="username" placeholder="Username" required />
            <div class="register__icon"></div>
          </div>
           <div class="register__name">
            <input type="name" name="fullname" placeholder="Nama Lengkap" required />
            <div class="register__icon"></div>
          </div>
          <div class="register__email">
            <input type="text" name="email" placeholder="Email" required />
            <div class="register__icon"></div>
          </div>
          <div class="register__pass">
            <input type="password" name="password" placeholder="Kata Sandi" required />
            <div class="register__icon"></div>
          </div>

           <!-- ERROR -->
           <% if (error){ %> 
            <div><strong style="color: red;"><%= error %> </strong></div><br>
          <%} %>

          <!-- INGAT SAYA-CHECK BOX -->
          <div class="register__box">
            <input type="checkbox" />
            <span>Saya menyetujui syarat layanan & privasi</span>
          </div>
          <!-- REGISTER BUTTON -->
          <div class="register__button">
            <input type="submit" value="Daftar" />
          </div>
        </form>

        <!-- LUPA PASSWORD -->
        <div class="register__forgot">
          Sudah punya akun?
          <a href="/login">Klik disini</a>
        </div>

        <!-- BREAK LINE -->
        <div class="register__line"></div>

        <!-- TIDAK PUNYA AKUN  -->
        <div class="register__google">
          <span>atau</span>
          <!-- GOOGLE register-->
        </div>
      </div>
    </div>
  </body>
</html>
